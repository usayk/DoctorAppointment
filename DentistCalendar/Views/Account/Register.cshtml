@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">Randevu Bilgi Sistemine Kayıt Ol</h1>

<div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
        <form asp-action="Register">
            <div class="form-group">
                @*//row mb-3*@
                <label asp-for="UserName"></label>
                <span class="text-danger" asp-validation-for="UserName"></span>
                <div class="col-sm-10">
                    <input asp-for="UserName" class="form-control">
                </div>
            </div>
            <div class="form-group">
                @*//row mb-3*@
                <label asp-for="Name"></label>
                <span class="text-danger" asp-validation-for="Name"></span>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control">
                </div>
            </div>
            <div class="form-group">
                @*//row mb-3*@
                <label asp-for="SurName"></label>
                <span class="text-danger" asp-validation-for="SurName"></span>
                <div class="col-sm-10">
                    <input asp-for="SurName" class="form-control">
                </div>
            </div>
            <div class="form-group">
                @*//row mb-3*@
                <label asp-for="Email"></label>
                <span class="text-danger" asp-validation-for="Email"></span>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control">
                </div>
            </div>
            <div class="form-group">
                @*//row mb-3*@
                <label asp-for="Color"></label>
                <span class="text-danger" asp-validation-for="Color"></span>
                <div class="col-sm-10">
                    <input asp-for="Color" class="form-control">
                </div>
            </div>
            <div class="form-group">
                @*//row mb-3*@
                <label asp-for="Password"></label>
                <span class="text-danger" asp-validation-for="Password"></span>
                <div class="col-sm-10">
                    <input asp-for="Password" class="form-control">
                </div>
            </div>


            @*<div class="row mb-3">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="inputPassword3">
                </div>
            </div>*@
            
            <div class="form-group">
                <div class="col-sm-10 offset-sm-2">
                    <div class="form-check">
                        <input asp-for="IsDentist" type="checkbox" id="gridCheck1">
                        <label class="form-check-label" asp-for="IsDentist"></label>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Sign in</button>
        </form>
    </div>
    <div class="col-md-4">

    </div>

</div>
